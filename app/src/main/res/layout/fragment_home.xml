<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#BA181B">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tvBannerTitle"
            android:text="GeoLapor"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBannerInfo"
            android:text="Aplikasi Pelaporan Kerusakan Infrastruktur, Lingkungan &amp; Bencana"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_below="@id/tvBannerTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- KONTEN UTAMA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:padding="14dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnMap"
                    android:text="Buka Peta (Laporkan)"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#BA181B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnData"
                    android:text="Lihat Daftar Laporan"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#BA181B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
